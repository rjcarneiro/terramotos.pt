{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DatabaseContext": "Server=.\\SQLEXPRESS;Database=Terramotos;Trusted_Connection=True;"
  },
  "AllowedHosts": "*",
  "Database": {
    "Timeout": 30,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "Failure": {
      "Retries": 15,
      "Seconds": 10
    }
  },
  "Themes": [
    {
      "Name": "Light",
      "Code": "light",
      "Color": "#dee2e6"
    },
    {
      "Name": "Dark",
      "Code": "dark",
      "Color": "#212529"
    }
  ]
}